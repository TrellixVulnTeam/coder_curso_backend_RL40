<section class="w-full flex flex-col gap-4 items-center justify-center">
  <article>
    <h1 class="w-full font-bold text-4xl text-purple-600">
      Listado de productos con EJS
    </h1>
  </article>
  <article class="overflow-x-auto w-full">
    <div
      class="min-w-screen flex items-center justify-center bg-gray-100 font-sans overflow-hidden"
    >
      <div class="w-full lg:w-5/6">
        <div class="bg-white shadow-md rounded my-6">
          <table class="min-w-max w-full table-auto">
            <thead>
              <tr
                class="bg-purple-200 text-gray-600 uppercase text-sm leading-normal"
              >
                <th class="py-3 px-6 text-left"></th>
                <th class="py-3 px-6 text-left">Title</th>
                <th class="py-3 px-6 text-center">Precio</th>
                <th class="py-3 px-6 text-center">Path imagen</th>
                <th class="py-3 px-6 text-center">Acciones</th>
              </tr>
            </thead>
            <tbody class="text-gray-600 text-sm font-light">
              <% listProds.forEach(prod => { %>
              <tr class="border-b border-gray-200 hover:bg-gray-100">
                <td class="py-3 px-6 text-left whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="mr-2 w-8 h-8">
                      <img src="<%= prod.imageurl %>" />
                    </div>
                  </div>
                </td>
                <td class="py-3 px-6 text-left">
                  <span><%= prod.title %></span>
                </td>
                <td class="py-3 px-6 text-center">
                  <span><%= prod.price %></span>
                </td>
                <td class="py-3 px-6 text-center">
                  <div class="flex items-center justify-center">
                    <span><%= prod.thumbnail %></span>
                  </div>
                </td>
                <td class="py-3 px-6 text-center">
                  <div class="flex item-center justify-center">
                    <div
                      class="w-4 mr-2 transform hover:text-purple-500 hover:scale-110 cursor-pointer"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"
                        />
                      </svg>
                    </div>
                    <a
                      class="w-4 mr-2 transform hover:text-purple-500 hover:scale-110 cursor-pointer"
                      href="/productos/<%= prod.id %>?_method=DELETE"
                      rel="nofollow"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                        />
                      </svg>
                    </a>
                  </div>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </article>
</section>
